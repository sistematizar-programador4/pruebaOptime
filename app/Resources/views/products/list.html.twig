{% extends 'base.html.twig' %}

{% block body %}
<style>
  th, td {
    padding: 10px;
  }
  th {
    text-align: left;
  }
  li{
    font-size:16px    
  }
</style>
<h1>All Articles</h1>
<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <textarea id="icon_prefix2" name="filter" class="materialize-textarea"></textarea>
        <label for="icon_prefix2">Search</label>
      </div>
      <div class="input-field col s6">
      <button type="submit" class="btn waves-effect waves-light submit">Search products</button>
      </div>
    </div>
  </form>
</div>
{% if products is not empty %}
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Mark</th>
      <th>Category</th>
      <th>Price</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  {% for product in products %}
    {% if product.category %}
      {% if product.category.active %}
      <tr>
        <td>{{ product.id }}</td>
        <td>{{ product.code }}</td>
        <td>{{ product.name }}</td>
        <td>{{ product.description | slice(0, 20) }}...</td>
        <td>{{ product.mark }}</td>
        <td>{{ product.category }}</td>
        <td>{{ product.price }}</td>
        <td>
          <a class="btn waves-effect waves-light" href="/update-products/{{ product.id }}">
            Update
          </a>
        </td>
        <td>
          <a class="waves-effect waves-light btn modal-trigger" href="#modal{{product.id}}">
            Delete
          </a>
        </td>
      </tr>
      <div id="modal{{product.id}}" class="modal">
      <div class="modal-content">
        <h4>Â¿Seguro desea eliminar este registro?</h4>
      </div>
      <div class="modal-footer">
        <a class="btn waves-effect waves-light" href="/delete-products/{{ product.id }}">
            Si!
          </a>
      </div>
      {% endif %}  
    {% endif %}
</div>
  {% endfor %}
  </tbody>
</table>
{% else %}
  <p>No products found.</p>
{% endif %}

<br/>
<a href="/create-products">Create New</a>
{% endblock %}
