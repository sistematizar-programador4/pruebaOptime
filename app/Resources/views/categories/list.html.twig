{% extends 'base.html.twig' %}

{% block body %}
<style>
  th, td {
    padding: 10px;
  }
  th {
    text-align: left;
  }
  li{
    font-size:16px    
  }
</style>
<h1>All Categories</h1>

{% if categories is not empty %}
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  {% for category in categories %}
  <tr>
    <td>{{ category.id }}</td>
    <td>{{ category.code }}</td>
    <td>{{ category.name }}</td>
    <td>{{ category.description | slice(0, 20) }}...</td>
    <td>{{ category.active }}</td>
    <td>
      <a class="btn waves-effect waves-light" href="/update-categories/{{ category.id }}">
        Update
      </a>
    </td>
    <td>
      <a class="waves-effect waves-light btn modal-trigger" href="#modal{{category.id}}">
        Delete
      </a>
    </td>
  </tr>
  <div id="modal{{category.id}}" class="modal">
    <div class="modal-content">
      <h4>Â¿Seguro desea eliminar este registro?</h4>
    </div>
    <div class="modal-footer">
      <a class="btn waves-effect waves-light" href="/delete-categories/{{ category.id }}">
          Si!
        </a>
    </div>
  </div>
  {% endfor %}
  </tbody>
</table>
{% else %}
  <p>No categories found.</p>
{% endif %}
<br/>
<a href="/create-categories">Create New</a>
{% endblock %}
